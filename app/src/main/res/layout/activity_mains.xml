<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f5"
    android:orientation="vertical"
    tools:context="com.shizhuang.shimingrenzheng.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="实名认证"
            android:textColor="#fff"
            android:textSize="30px"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f4f5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="请如实填写真实姓名和身份证号，否则将无法提现"
                android:textColor="#333333"
                android:textSize="26px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24px"
                        android:text="真实姓名"
                        android:textColor="#1D1D1D"
                        android:textSize="30px"/>

                    <EditText
                        android:id="@+id/ed_main_name"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入您的真实姓名"
                        android:textColor="#999999"
                        android:textSize="26px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24px"
                        android:text="联系电话"
                        android:textColor="#1D1D1D"
                        android:textSize="30px"/>

                    <EditText
                        android:id="@+id/ed_main_phone"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入您的联系电话"
                        android:textColor="#999999"
                        android:textSize="26px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24px"
                        android:text="身份证号"
                        android:textColor="#1D1D1D"
                        android:textSize="30px"/>

                    <EditText
                        android:id="@+id/ed_main_id"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入您的身份证号"
                        android:textColor="#999999"
                        android:textSize="26px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="拍摄身份证照片"
                android:textColor="#333333"
                android:textSize="26px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_main_renmian"
                            android:layout_width="200px"
                            android:layout_height="136px"
                            android:background="@mipmap/a"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="身份证(人面像)"
                            android:textColor="#333333"
                            android:textSize="24px"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_main_guohui"
                            android:layout_width="200px"
                            android:layout_height="136px"
                            android:background="@mipmap/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="身份证(国徽面)"
                            android:textColor="#333333"
                            android:textSize="24px"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_main_shouchizhao"
                            android:layout_width="200px"
                            android:layout_height="136px"
                            android:background="@mipmap/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="手持照"
                            android:textColor="#333333"
                            android:textSize="24px"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="示例图"
                    android:textColor="#333333"
                    android:textSize="26px"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="220px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:text="请保持身份证四角完整,文字清晰可辨"
                        android:textSize="20px"/>

                    <TextView
                        android:layout_width="220px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:text="请保持身份证四角完整,文字清晰可辨"
                        android:textSize="20px"/>

                    <TextView
                        android:layout_width="220px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:text="请按照示例图中的手势拍照，完整露出脸部、手部手臂以及身份证"
                        android:textSize="20px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="212px"
                        android:layout_height="146px"
                        android:src="@mipmap/q"/>

                    <ImageView
                        android:layout_width="224px"
                        android:layout_height="146px"
                        android:layout_marginLeft="20px"
                        android:src="@mipmap/w"/>

                    <ImageView
                        android:layout_width="224px"
                        android:layout_height="276px"
                        android:layout_marginLeft="20px"
                        android:src="@mipmap/e"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="34px"
                    android:text="备注：请按照示例图样式依次上传，如有疑问，请联系商家处理"
                    android:textColor="#333333"
                    android:textSize="22px"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="166px"
                    android:layout_marginTop="144px"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@mipmap/x"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="我已经阅读并同意收藏帮使用协议"
                        android:textColor="#1155D3"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <Button
                    android:id="@+id/bt_mian_wancheng"
                    android:layout_width="702px"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="40px"
                    android:background="#0D80CF"
                    android:text="完成"
                    android:textColor="#ffffff"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
